<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.requeststep.RequestStepEdit"
        datasource="requestStepDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.requeststep">
    <dsContext>
        <datasource id="requestStepDs"
                    class="com.company.office.entity.RequestStep"
                    view="requestStep-view"/>
        <collectionDatasource id="stepsDs"
                              class="com.company.office.entity.Step">
            <query>
                <![CDATA[select e from office$Step e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User">
            <query>
                <![CDATA[select e from sec$User e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <tabSheet id="tabSheet">
            <tab id="tabMain"
                 caption="Main"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="requestStepDs">
                    <column width="400px">
                        <field optionsDatasource="stepsDs"
                               property="step"
                               required="true"/>
                        <field optionsDatasource="usersDs"
                               property="user"/>
                        <field property="description"
                               rows="3"/>
                    </column>
                </fieldGroup>
            </tab>
            <tab id="tabSystem"
                 caption="System"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldsSystem"
                            datasource="requestStepDs">
                    <column width="350px">
                        <field optionsDatasource="stepsDs"
                               property="step"/>
                        <field optionsDatasource="usersDs"
                               property="user"/>
                        <field caption="mainMsg://field.created"
                               property="createTs"
                               resolution="SEC"/>
                        <field caption="mainMsg://field.author"
                               property="createdBy"/>
                        <field caption="mainMsg://field.updated"
                               property="updateTs"
                               resolution="SEC"/>
                        <field caption="mainMsg://field.editor"
                               property="updatedBy"/>
                    </column>
                </fieldGroup>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
