<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.requeststep.RequestStepEdit"
        datasource="requestStepDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.requeststep">
    <dsContext>
        <datasource id="requestStepDs"
                    class="com.company.office.entity.RequestStep"
                    view="requestStep-view">
            <collectionDatasource id="actionsDs"
                                  property="actions"/>
            <collectionDatasource id="communicationsDs"
                                  property="communications"/>
        </datasource>
    </dsContext>
    <dialogMode height="768"
                maximized="true"
                width="1024"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox expand="tabSheet"
              spacing="true"
              width="100%">
            <fieldGroup id="fieldGroup"
                        datasource="requestStepDs"
                        editable="false">
                <column width="250px">
                    <field property="request"/>
                    <field property="position"/>
                    <field property="state"/>
                    <field property="user"/>
                    <field property="description"/>
                    <field property="submissionTerm"/>
                    <field property="submitted"/>
                    <field property="approvalTerm"/>
                    <field property="approved"/>
                    <field property="penalty"/>
                    <field property="moment"/>
                </column>
            </fieldGroup>
            <tabSheet id="tabSheet"
                      height="100%">
                <tab id="actionsTab"
                     caption="msg://com.company.office.entity/RequestStep.actions"
                     margin="true,false,false,false"
                     spacing="true">
                    <table id="actionsTable"
                           height="100%"
                           width="100%">
                        <actions>
                            <action id="edit"/>
                        </actions>
                        <columns>
                            <column id="type"/>
                            <column id="description"/>
                            <column id="submitted"/>
                            <column id="approved"/>
                            <column id="performed"
                                    caption="msg://performed"
                                    generator="performedGenerator"/>
                        </columns>
                        <rows datasource="actionsDs"/>
                        <buttonsPanel>
                            <button action="actionsTable.edit"/>
                        </buttonsPanel>
                    </table>
                </tab>
                <tab id="communicationsTab"
                     caption="msg://com.company.office.entity/RequestStep.communications"
                     margin="true,false,false,false"
                     spacing="true">
                    <table id="communicationsTable"
                           height="100%"
                           width="100%">
                        <actions>
                            <action id="create"/>
                            <action id="edit"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="createTs"
                                    caption="mainMsg://field.created"/>
                            <column id="updateTs"
                                    caption="mainMsg://field.updated"/>
                            <column id="question"/>
                            <column id="initiator"/>
                            <column id="recepient"/>
                        </columns>
                        <rows datasource="communicationsDs"/>
                        <buttonsPanel>
                            <button action="communicationsTable.create"/>
                            <button action="communicationsTable.edit"/>
                            <button action="communicationsTable.remove"/>
                        </buttonsPanel>
                    </table>
                </tab>
            </tabSheet>
        </hbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
