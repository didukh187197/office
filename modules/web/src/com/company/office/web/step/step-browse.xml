<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.office.web.step.StepBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.office.web.step">
    <dsContext>
        <datasource id="stepDs"
                    class="com.company.office.entity.Step"
                    view="step-view">
            <collectionDatasource id="actionsDs"
                                  property="actions"/>
            <collectionDatasource id="usersDs"
                                  property="users"/>
        </datasource>
        <groupDatasource id="stepsDs"
                         class="com.company.office.entity.Step"
                         view="step-view">
            <query>
                <![CDATA[select e from office$Step e order by e.identifier]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="saveWithPrompt"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="stepsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="identifier"/>
                        <column id="description"/>
                    </columns>
                    <rows datasource="stepsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="tabSheetBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet"
                              height="100%">
                        <tab id="mainTab"
                             caption="msg://mainTab"
                             margin="true">
                            <fieldGroup id="fieldGroup"
                                        datasource="stepDs">
                                <column width="400px">
                                    <field property="identifier"
                                           required="true"
                                           width="75px"/>
                                    <field property="description"
                                           required="true"
                                           rows="2"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="actionsTab"
                             caption="msg://com.company.office.entity/Step.actions"
                             expand="actionsTable"
                             margin="true,false,false,false"
                             spacing="true">
                            <table id="actionsTable"
                                   height="400px"
                                   reorderingAllowed="false"
                                   width="100%">
                                <actions>
                                    <action id="create"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="type"/>
                                    <column id="workDays"
                                            width="100"/>
                                    <column id="description"/>
                                    <column id="createTs"/>
                                </columns>
                                <rows datasource="actionsDs"/>
                                <buttonsPanel>
                                    <button action="actionsTable.create"/>
                                    <button action="actionsTable.edit"/>
                                    <button action="actionsTable.remove"/>
                                </buttonsPanel>
                            </table>
                            <fieldGroup id="fieldsAction"
                                        datasource="actionsDs"
                                        editable="false">
                                <column width="400px">
                                    <field property="description"
                                           rows="2"/>
                                    <field property="template"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="usersTab"
                             caption="msg://com.company.office.entity/Step.users"
                             margin="true,false,false,false">
                            <table id="usersTable"
                                   height="100%"
                                   width="100%">
                                <actions>
                                    <action id="create"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="user"/>
                                    <column id="requests"/>
                                    <column id="threshold"/>
                                </columns>
                                <rows datasource="usersDs"/>
                                <buttonsPanel>
                                    <button action="usersTable.create"/>
                                    <button action="usersTable.edit"/>
                                    <button action="usersTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id="tabSystem"
                             caption="System"
                             margin="true,false,false,false"
                             spacing="true">
                            <fieldGroup id="fieldsSystem"
                                        datasource="stepDs">
                                <column width="250px">
                                    <field caption="mainMsg://field.created"
                                           property="createTs"
                                           resolution="SEC"/>
                                    <field caption="mainMsg://field.author"
                                           property="createdBy"/>
                                    <field caption="mainMsg://field.updated"
                                           property="updateTs"
                                           resolution="SEC"/>
                                    <field caption="mainMsg://field.editor"
                                           property="updatedBy"/>
                                </column>
                            </fieldGroup>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
