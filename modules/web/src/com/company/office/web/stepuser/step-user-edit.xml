<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.stepuser.StepUserEdit"
        datasource="stepUserDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.stepuser">
    <dsContext>
        <datasource id="stepUserDs"
                    class="com.company.office.entity.StepUser"
                    view="stepUser-view"/>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User">
            <query>
                <![CDATA[select e from sec$User e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="stepUserDs">
            <column width="350px">
                <field optionsDatasource="usersDs"
                       property="user"/>
                <field editable="false"
                       property="requests"
                       width="75px"/>
                <field property="threshold"
                       required="true"
                       width="75px"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
