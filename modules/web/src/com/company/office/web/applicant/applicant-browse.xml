<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.office.web.applicant.ApplicantBrowse"
        focusComponent="applicantsTable"
        lookupComponent="applicantsTable"
        messagesPack="com.company.office.web.applicant">
    <dsContext>
        <groupDatasource id="applicantsDs"
                         class="com.company.office.entity.Applicant"
                         view="applicant-view">
            <query>
                <![CDATA[select e from office$Applicant e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="applicantsTable"
            spacing="true">
        <filter id="filter"
                applyTo="applicantsTable"
                datasource="applicantsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="applicantsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="request"/>
                <column id="code"/>
            </columns>
            <rows datasource="applicantsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="applicantsTable.create"/>
                <button id="editBtn"
                        action="applicantsTable.edit"/>
                <button id="removeBtn"
                        action="applicantsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
