<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.office.web.applicant.ApplicantBrowse"
        focusComponent="applicantsTable"
        lookupComponent="applicantsTable"
        messagesPack="com.company.office.web.applicant">
    <dsContext>
        <groupDatasource id="applicantsDs"
                         class="com.company.office.entity.Applicant"
                         view="applicant-view">
            <query>
                <![CDATA[select e from office$Applicant e]]>
            </query>
            <datasource id="requestDs"
                        property="request"/>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="applicantsBox"
            spacing="true">
        <filter id="filter"
                applyTo="applicantsTable"
                datasource="applicantsDs">
            <properties include=".*"/>
        </filter>
        <hbox id="applicantsBox"
              expand="applicantsTable"
              spacing="true"
              width="100%">
            <groupTable id="applicantsTable"
                        height="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="user"/>
                    <column id="request"/>
                    <column id="code"/>
                </columns>
                <rows datasource="applicantsDs"/>
                <rowsCount/>
                <buttonsPanel id="buttonsPanel"
                              alwaysVisible="true">
                    <button id="createBtn"
                            action="applicantsTable.create"/>
                    <button id="editBtn"
                            action="applicantsTable.edit"/>
                    <button id="removeBtn"
                            action="applicantsTable.remove"/>
                </buttonsPanel>
            </groupTable>
            <groupBox id="requestBox"
                      caption="msg://fieldsRequest"
                      height="100%"
                      spacing="true"
                      width="600px">
                <fieldGroup id="requestFields"
                            datasource="requestDs"
                            editable="false">
                    <column width="400px">
                        <field property="series"/>
                        <field property="number"/>
                        <field property="created"/>
                        <field property="closed"/>
                        <field property="description"
                               rows="3"/>
                        <field property="step"/>
                        <field property="user"/>
                    </column>
                </fieldGroup>
            </groupBox>
        </hbox>
    </layout>
</window>
