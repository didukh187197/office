<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.office.web.request.RequestBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.office.web.request">
    <dsContext>
        <groupDatasource id="requestsDs"
                         class="com.company.office.entity.Request"
                         view="request-view">
            <query>
                <![CDATA[select e from office$Request e order by e.moment]]>
            </query>
            <collectionDatasource id="stepsDs"
                                  property="steps">
                <collectionDatasource id="actionsDs"
                                      property="actions"/>
                <collectionDatasource id="communicationsDs"
                                      property="communications"/>
            </collectionDatasource>
            <collectionDatasource id="logsDs"
                                  property="logs"/>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="requestsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"
                                visible="false"/>
                        <action id="edit"/>
                        <action id="remove"
                                visible="false"/>
                        <action id="position"
                                caption="msg://positionBtn"
                                invoke="onPosition"
                                trackSelection="true"/>
                    </actions>
                    <columns>
                        <column id="applicant"/>
                        <column id="applicantCode"/>
                        <column id="sn"
                                caption="#"
                                generator="snGenerator"/>
                        <column id="step.position"/>
                        <column id="step.state"/>
                        <column id="step.user"/>
                    </columns>
                    <rows datasource="requestsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <popupButton id="extraActionsBtn"
                                     caption="msg://extraActionsBtn"
                                     enable="false"
                                     visible="false">
                            <actions>
                                <action id="stop"
                                        caption="msg://extraActionsBtn.stop"
                                        invoke="onStop"
                                        visible="false"/>
                                <action id="start"
                                        caption="msg://extraActionsBtn.start"
                                        invoke="onStart"
                                        visible="false"/>
                                <action id="cancel"
                                        caption="msg://extraActionsBtn.cancel"
                                        invoke="onCancel"
                                        visible="false"/>
                                <action id="archive"
                                        caption="msg://extraActionsBtn.archive"
                                        invoke="onArchive"
                                        visible="false"/>
                            </actions>
                        </popupButton>
                        <hbox id="managerBox"
                              spacing="true"
                              visible="false">
                            <button id="stopBtn"
                                    action="extraActionsBtn.stop"
                                    caption="msg://extraActionsBtn.stop"/>
                            <button id="startBtn"
                                    action="extraActionsBtn.start"
                                    caption="msg://extraActionsBtn.start"/>
                            <button id="cancelBtn"
                                    action="extraActionsBtn.cancel"
                                    caption="msg://extraActionsBtn.cancel"/>
                            <button id="archiveBtn"
                                    action="extraActionsBtn.archive"
                                    caption="msg://extraActionsBtn.archive"/>
                        </hbox>
                        <linkButton id="positionBtn"
                                    action="table.position"
                                    align="MIDDLE_LEFT"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="infoBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="tabSheetBox"
                      height="100%">
                    <tabSheet id="tabSheet"
                              height="100%">
                        <tab id="mainTab"
                             caption="msg://mainTab"
                             expand="applicantBox"
                             margin="true"
                             spacing="true">
                            <groupBox id="requestBox"
                                      caption="msg://requestBox"
                                      collapsable="true"
                                      spacing="true">
                                <fieldGroup id="fieldGroup"
                                            datasource="requestsDs"
                                            editable="false">
                                    <column fieldCaptionWidth="75px"
                                            width="120px">
                                        <field property="series"
                                               required="true"
                                               width="100px"/>
                                    </column>
                                    <column width="120px">
                                        <field property="number"
                                               required="true"
                                               width="100px"/>
                                    </column>
                                </fieldGroup>
                                <fieldGroup id="fieldGroupDescription"
                                            datasource="requestsDs"
                                            editable="false">
                                    <column fieldCaptionWidth="75px"
                                            width="400px">
                                        <field property="description"
                                               rows="2"/>
                                    </column>
                                </fieldGroup>
                            </groupBox>
                            <groupBox id="applicantBox"
                                      caption="msg://applicantBox"
                                      collapsable="true"
                                      expand="dataBox"
                                      spacing="true">
                                <hbox spacing="true">
                                    <fieldGroup align="MIDDLE_LEFT"
                                                datasource="requestsDs"
                                                editable="false">
                                        <column fieldCaptionWidth="75px"
                                                width="240px">
                                            <field property="applicant"
                                                   required="true"/>
                                            <field property="applicantCode"
                                                   required="true"
                                                   width="100px"/>
                                        </column>
                                    </fieldGroup>
                                    <groupBox height="150px"
                                              spacing="true"
                                              width="150px">
                                        <image id="image"
                                               align="MIDDLE_CENTER"
                                               height="100%"
                                               scaleMode="CONTAIN"
                                               width="100%"/>
                                    </groupBox>
                                </hbox>
                                <vbox id="dataBox"
                                      spacing="true">
                                    <fieldGroup datasource="requestsDs"
                                                editable="false">
                                        <column fieldCaptionWidth="75px"
                                                width="400px">
                                            <field property="applicantPhone"/>
                                            <field property="applicantAddress"
                                                   rows="3"/>
                                        </column>
                                    </fieldGroup>
                                </vbox>
                            </groupBox>
                        </tab>
                        <tab id="stepsTab"
                             caption="msg://com.company.office.entity/Request.steps"
                             expand="tabSheetStep"
                             margin="true,false,false,false"
                             spacing="true">
                            <hbox expand="stepBtn"
                                  spacing="true">
                                <label align="MIDDLE_LEFT"
                                       value="msg://step"/>
                                <lookupField id="stepLookup"
                                             nullOptionVisible="false"
                                             optionsDatasource="stepsDs"
                                             width="450px"/>
                                <linkButton id="stepBtn"
                                            align="MIDDLE_LEFT"
                                            caption="msg://stepBtn"
                                            invoke="onStepBtnClick"/>
                            </hbox>
                            <tabSheet id="tabSheetStep">
                                <tab id="actionsTab"
                                     caption="msg://com.company.office.entity/RequestStep.actions"
                                     margin="true,false,false,false"
                                     spacing="true">
                                    <table id="actionsTable"
                                           height="100%"
                                           width="100%">
                                        <columns>
                                            <column id="type"/>
                                            <column id="description"/>
                                            <column id="submitted"/>
                                            <column id="approved"/>
                                            <column id="performed"
                                                    caption="msg://actionsTable.column.performed"
                                                    generator="performedGenerator"/>
                                        </columns>
                                        <rows datasource="actionsDs"/>
                                    </table>
                                </tab>
                                <tab id="communicationsTab"
                                     caption="msg://com.company.office.entity/RequestStep.communications"
                                     expand="communicationsTable"
                                     margin="true,false,false,false"
                                     spacing="true">
                                    <table id="communicationsTable"
                                           width="100%">
                                        <columns>
                                            <column id="createTs"
                                                    caption="mainMsg://field.created"/>
                                            <column id="initiator"/>
                                            <column id="recepient"/>
                                            <column id="closed"/>
                                        </columns>
                                        <rows datasource="communicationsDs"/>
                                    </table>
                                    <fieldGroup id="communicationFields"
                                                datasource="communicationsDs"
                                                editable="false">
                                        <column width="400px">
                                            <field property="question"
                                                   rows="2"/>
                                            <field property="answer"
                                                   rows="2"/>
                                        </column>
                                    </fieldGroup>
                                </tab>
                            </tabSheet>
                        </tab>
                        <tab id="logsTab"
                             caption="msg://com.company.office.entity/Request.logs"
                             expand="logsTable"
                             margin="true,false,false,false"
                             spacing="true">
                            <table id="logsTable"
                                   height="400px"
                                   width="100%">
                                <columns>
                                    <column id="createTs"
                                            caption="mainMsg://field.created"/>
                                    <column id="sender"
                                            caption="mainMsg://field.author"/>
                                    <column id="recepient"/>
                                    <column id="info"/>
                                </columns>
                                <rows datasource="logsDs"/>
                            </table>
                            <fieldGroup id="fieldsLogs"
                                        datasource="logsDs"
                                        editable="false">
                                <column width="400px">
                                    <field property="info"
                                           rows="2"/>
                                </column>
                            </fieldGroup>
                        </tab>
                    </tabSheet>
                </vbox>
            </vbox>
        </split>
    </layout>
</window>
