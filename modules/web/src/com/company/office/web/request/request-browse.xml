<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.office.web.request.RequestBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.office.web.request">
    <dsContext>
        <datasource id="requestDs"
                    class="com.company.office.entity.Request"
                    view="request-view">
            <collectionDatasource id="stepsDs"
                                  property="steps">
                <collectionDatasource id="actionsDs"
                                      property="actions"/>
                <collectionDatasource id="communicationsDs"
                                      property="communications"/>
            </collectionDatasource>
            <collectionDatasource id="logsDs"
                                  property="logs"/>
        </datasource>
        <groupDatasource id="requestsDs"
                         class="com.company.office.entity.Request"
                         view="request-view">
            <query>
                <![CDATA[select e from office$Request e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="workerDs"
                              class="com.haulmont.cuba.security.entity.User">
            <query>
                <![CDATA[select e from sec$User e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="stepDs"
                              class="com.company.office.entity.Step">
            <query>
                <![CDATA[select e from office$Step e order by e.identifier]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="saveWithPrompt"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="requestsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="applicant"/>
                        <column id="applicantCode"/>
                        <column id="sn"
                                caption="#"
                                generator="snGenerator"/>
                        <column id="step"/>
                    </columns>
                    <rows datasource="requestsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <popupButton id="extraActionsBtn"
                                     caption="msg://extraActionsBtn"
                                     enable="false">
                            <actions>
                                <action id="findUser"
                                        caption="msg://extraActionsBtn.findUser"
                                        invoke="onFindUser"/>
                                <action id="changeStep"
                                        caption="msg://extraActionsBtn.changeStep"
                                        invoke="onChangeStep"/>
                                <action id="suspend"
                                        caption="msg://extraActionsBtn.suspend"
                                        invoke="onSuspend"/>
                                <action id="resume"
                                        caption="msg://extraActionsBtn.resume"
                                        invoke="onResume"/>
                                <action id="cancel"
                                        caption="msg://extraActionsBtn.cancel"
                                        invoke="onCancel"/>
                                <action id="archive"
                                        caption="msg://extraActionsBtn.archive"
                                        invoke="onArchive"/>
                            </actions>
                        </popupButton>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="tabSheetBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet"
                              height="100%">
                        <tab id="mainTab"
                             caption="msg://mainTab"
                             margin="true">
                            <fieldGroup id="fieldGroup"
                                        datasource="requestDs">
                                <column width="400px">
                                    <field property="applicant"
                                           required="true"/>
                                    <field property="applicantCode"
                                           required="true"
                                           width="100px"/>
                                    <field property="applicantPhone"/>
                                    <field property="series"
                                           required="true"
                                           width="100px"/>
                                    <field property="number"
                                           required="true"
                                           width="100px"/>
                                    <field property="description"
                                           rows="2"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="stepsTab"
                             caption="msg://com.company.office.entity/Request.steps"
                             expand="stepsTable"
                             margin="true,false,false,false"
                             spacing="true">
                            <table id="stepsTable"
                                   height="400px"
                                   width="100%">
                                <actions>
                                    <action id="create"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="step"/>
                                    <column id="state"/>
                                    <column id="user"/>
                                    <column id="submitted"/>
                                    <column id="approved"/>
                                </columns>
                                <rows datasource="stepsDs"/>
                                <buttonsPanel>
                                    <button action="stepsTable.create"/>
                                    <button action="stepsTable.edit"/>
                                    <button action="stepsTable.remove"/>
                                </buttonsPanel>
                            </table>
                            <fieldGroup id="fieldsStep"
                                        datasource="stepsDs">
                                <column fieldCaptionWidth="75px"
                                        width="385px">
                                    <field property="description"
                                           rows="3"/>
                                </column>
                            </fieldGroup>
                            <fieldGroup id="fieldsStepDates"
                                        datasource="stepsDs">
                                <column fieldCaptionWidth="75px"
                                        width="150px">
                                    <field property="submissionTerm"/>
                                    <field property="submitted"/>
                                </column>
                                <column fieldCaptionWidth="75px"
                                        width="150px">
                                    <field property="approvalTerm"/>
                                    <field property="approved"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="logsTab"
                             caption="msg://com.company.office.entity/Request.logs"
                             expand="logsTable"
                             margin="true,false,false,false"
                             spacing="true">
                            <table id="logsTable"
                                   height="400px"
                                   width="100%">
                                <actions>
                                    <action id="create"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="createTs"
                                            caption="mainMsg://field.created"/>
                                    <column id="created"
                                            caption="mainMsg://field.author"/>
                                    <column id="info"/>
                                </columns>
                                <rows datasource="logsDs"/>
                                <buttonsPanel>
                                    <button action="logsTable.create"/>
                                    <button action="logsTable.edit"/>
                                    <button action="logsTable.remove"/>
                                </buttonsPanel>
                            </table>
                            <fieldGroup id="fieldsLogs"
                                        datasource="logsDs"
                                        editable="false">
                                <column width="400px">
                                    <field property="info"
                                           rows="2"/>
                                </column>
                            </fieldGroup>
                        </tab>
                        <tab id="systemTab"
                             caption="System"
                             margin="true,false,false,false"
                             spacing="true">
                            <fieldGroup id="fieldsSystem"
                                        datasource="requestDs">
                                <column width="350px">
                                    <field optionsDatasource="stepDs"
                                           property="step"/>
                                    <field caption="mainMsg://field.created"
                                           property="createTs"
                                           resolution="SEC"/>
                                    <field caption="mainMsg://field.author"
                                           property="createdBy"/>
                                    <field caption="mainMsg://field.updated"
                                           property="updateTs"
                                           resolution="SEC"/>
                                    <field caption="mainMsg://field.editor"
                                           property="updatedBy"/>
                                </column>
                            </fieldGroup>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
