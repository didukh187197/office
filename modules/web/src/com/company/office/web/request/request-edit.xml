<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.request.RequestEdit"
        datasource="requestDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.request">
    <dsContext>
        <datasource id="requestDs"
                    class="com.company.office.entity.Request"
                    view="request-view">
            <collectionDatasource id="stepsDs"
                                  property="steps"/>
            <collectionDatasource id="actionsDs"
                                  property="actions"/>
            <collectionDatasource id="communicationsDs"
                                  property="communications"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="requestDs">
                <column width="250px">
                    <field property="applicant"/>
                    <field property="applicantCode"/>
                    <field property="series"/>
                    <field property="number"/>
                    <field property="description"/>
                    <field property="step"/>
                    <field property="user"/>
                    <field property="state"/>
                    <field property="penalty"/>
                </column>
            </fieldGroup>
            <groupBox id="stepsBox"
                      caption="msg://com.company.office.entity/Request.steps">
                <table id="stepsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="description"/>
                        <column id="step"/>
                        <column id="user"/>
                    </columns>
                    <rows datasource="stepsDs"/>
                    <buttonsPanel>
                        <button action="stepsTable.create"/>
                        <button action="stepsTable.edit"/>
                        <button action="stepsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="actionsBox"
                      caption="msg://com.company.office.entity/Request.actions">
                <table id="actionsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="template"/>
                        <column id="file"/>
                        <column id="createTs"/>
                        <column id="createdBy"/>
                        <column id="updateTs"/>
                        <column id="updatedBy"/>
                    </columns>
                    <rows datasource="actionsDs"/>
                    <buttonsPanel>
                        <button action="actionsTable.create"/>
                        <button action="actionsTable.edit"/>
                        <button action="actionsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="communicationsBox"
                      caption="msg://com.company.office.entity/Request.communications">
                <table id="communicationsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="file"/>
                        <column id="createTs"/>
                        <column id="createdBy"/>
                        <column id="updateTs"/>
                        <column id="updatedBy"/>
                    </columns>
                    <rows datasource="communicationsDs"/>
                    <buttonsPanel>
                        <button action="communicationsTable.create"/>
                        <button action="communicationsTable.edit"/>
                        <button action="communicationsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
