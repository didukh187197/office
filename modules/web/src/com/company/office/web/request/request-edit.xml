<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.request.RequestEdit"
        datasource="requestDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.request">
    <dsContext>
        <datasource id="requestDs"
                    class="com.company.office.entity.Request"
                    view="request-view">
            <collectionDatasource id="actsDs"
                                  property="acts"/>
            <collectionDatasource id="statesDs"
                                  property="states"/>
            <collectionDatasource id="communicationsDs"
                                  property="communications"/>
        </datasource>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User">
            <query>
                <![CDATA[select e from sec$User e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="stepsDs"
                              class="com.company.office.entity.Step">
            <query>
                <![CDATA[select e from office$Step e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <hbox id="titleBox"
                  expand="communicationsBox"
                  spacing="true"
                  width="100%">
                <fieldGroup id="fieldGroup"
                            datasource="requestDs">
                    <column width="350px">
                        <field editable="false"
                               property="applicant"/>
                        <field optionsDatasource="stepsDs"
                               property="step"
                               required="true"/>
                        <field optionsDatasource="usersDs"
                               property="user"
                               required="true"/>
                        <field property="description"
                               rows="3"/>
                    </column>
                    <column width="150px">
                        <field property="series"
                               required="true"/>
                        <field property="number"
                               required="true"/>
                        <field editable="false"
                               property="created"/>
                        <field property="closed"/>
                    </column>
                </fieldGroup>
                <groupBox id="communicationsBox"
                          caption="msg://com.company.office.entity/Request.communications">
                    <table id="communicationsTable"
                           height="200px"
                           width="100%">
                        <actions>
                            <action id="create"/>
                            <action id="edit"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="file"/>
                        </columns>
                        <rows datasource="communicationsDs"/>
                        <buttonsPanel>
                            <button action="communicationsTable.create"/>
                            <button action="communicationsTable.edit"/>
                            <button action="communicationsTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </hbox>
            <groupBox id="actsBox"
                      caption="msg://com.company.office.entity/Request.acts">
                <table id="actsTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="template"/>
                        <column id="file"/>
                    </columns>
                    <rows datasource="actsDs"/>
                    <buttonsPanel>
                        <button action="actsTable.create"/>
                        <button action="actsTable.edit"/>
                        <button action="actsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="statesBox"
                      caption="msg://com.company.office.entity/Request.states">
                <table id="statesTable"
                       height="200px"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="user"/>
                    </columns>
                    <rows datasource="statesDs"/>
                    <buttonsPanel>
                        <button action="statesTable.create"/>
                        <button action="statesTable.edit"/>
                        <button action="statesTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
