<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.requestaction.RequestActionEdit"
        datasource="requestActionDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.requestaction">
    <dsContext>
        <datasource id="requestActionDs"
                    class="com.company.office.entity.RequestAction"
                    view="requestAction-view">
            <datasource id="fileDs"
                        property="file"/>
        </datasource>
        <collectionDatasource id="templatesDs"
                              class="com.haulmont.cuba.core.entity.FileDescriptor"
                              view="_minimal">
            <query>
                <![CDATA[select e from sys$FileDescriptor e where lower(e.name) like '%template%']]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <tabSheet id="tabSheet">
            <tab id="tabMain"
                 caption="Main"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="requestActionDs">
                    <column fieldCaptionWidth="90px"
                            width="400px">
                        <field property="type"
                               required="true"/>
                        <field property="description"
                               rows="3"/>
                        <field property="deadline"
                               required="true"
                               width="150px"/>
                        <field property="message"
                               rows="3"/>
                    </column>
                </fieldGroup>
                <vbox id="boxFiles"
                      spacing="true">
                    <hbox expand="btnShowTemplate"
                          spacing="true"
                          width="100%">
                        <label id="labelTemplate"
                               align="MIDDLE_CENTER"
                               value="msg://lblTemplate"
                               width="85px"/>
                        <lookupField id="lookupTemplate"
                                     datasource="requestActionDs"
                                     optionsDatasource="templatesDs"
                                     property="template"
                                     width="400px"/>
                        <linkButton id="btnShowTemplate"
                                    align="MIDDLE_CENTER"
                                    caption="msg://btnShowTemplate"
                                    invoke="onBtnShowTemplateClick"/>
                    </hbox>
                    <hbox expand="uploadFile"
                          spacing="true"
                          width="100%">
                        <label id="labelFile"
                               align="MIDDLE_CENTER"
                               value="msg://lblFile"
                               width="85px"/>
                        <upload id="uploadFile"
                                clearButtonIcon="icons/remove.png"
                                datasource="requestActionDs"
                                property="file"
                                showClearButton="true"
                                showFileName="true"
                                uploadButtonIcon="icons/upload.png"/>
                    </hbox>
                </vbox>
            </tab>
            <tab id="tabSystem"
                 caption="System"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldsSystem"
                            datasource="requestActionDs">
                    <column width="400px">
                        <field property="submitted"
                               width="120px"/>
                        <field property="approved"
                               width="120px"/>
                        <field property="penalty"
                               width="70px"/>
                        <field caption="mainMsg://field.created"
                               property="createTs"
                               resolution="SEC"/>
                        <field caption="mainMsg://field.author"
                               property="createdBy"/>
                        <field caption="mainMsg://field.updated"
                               property="updateTs"
                               resolution="SEC"/>
                        <field caption="mainMsg://field.editor"
                               property="updatedBy"/>
                    </column>
                </fieldGroup>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
