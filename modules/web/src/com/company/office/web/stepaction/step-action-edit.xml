<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.office.web.stepaction.StepActionEdit"
        datasource="stepActionDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.office.web.stepaction">
    <dsContext>
        <datasource id="stepActionDs"
                    class="com.company.office.entity.StepAction"
                    view="stepAction-view"/>
        <collectionDatasource id="fileDescriptorsDs"
                              class="com.haulmont.cuba.core.entity.FileDescriptor">
            <query>
                <![CDATA[select e from sys$FileDescriptor e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    border="visible"
                    datasource="stepActionDs">
            <column width="250px">
                <field property="type"/>
                <field property="description"/>
            </column>
        </fieldGroup>
        <lookupField caption="msg://lookupFile"
                     datasource="stepActionDs"
                     optionsDatasource="fileDescriptorsDs"
                     property="template"
                     width="300px"/>
        <upload id="uploadTemplate"
                datasource="stepActionDs"
                property="template"
                showClearButton="true"
                showFileName="true"/>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
