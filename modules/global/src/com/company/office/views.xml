<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.office.entity.ExtUser"
          extends="user.edit"
          name="user.edit">
        <property name="requestPosition"/>
        <property name="requestCount"/>
        <property name="requestThreshold"/>
        <property name="request"
                  view="_minimal">
            <property name="worker"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.office.entity.ExtUser"
          extends="user.browse"
          name="extUser-browse-view">
        <property name="requestPosition"/>
        <property name="requestCount"/>
        <property name="requestThreshold"/>
        <property name="request"
                  view="_minimal">
            <property name="worker"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.office.entity.Step"
          extends="_local"
          name="step-view">
        <property name="user"
                  view="_minimal"/>
        <property name="actions"
                  view="_minimal">
            <property name="type"/>
            <property name="description"/>
            <property name="template"
                      view="_minimal">
                <property name="size"/>
            </property>
            <property name="workDays"/>
        </property>
    </view>
    <view class="com.company.office.entity.StepAction"
          extends="_local"
          name="stepAction-view">
        <property name="template"
                  view="_minimal">
            <property name="size"/>
        </property>
    </view>
    <view class="com.company.office.entity.RequestAction"
          extends="_local"
          name="requestAction-view">
        <property name="template"
                  view="_minimal">
            <property name="size"/>
        </property>
        <property name="file"
                  view="_minimal">
            <property name="size"/>
        </property>
    </view>
    <view class="com.company.office.entity.RequestCommunication"
          extends="_local"
          name="requestCommunication-view">
        <property name="file"
                  view="_minimal">
            <property name="size"/>
        </property>
    </view>
    <view class="com.company.office.entity.RequestStatus"
          extends="_local"
          name="requestStatus-view">
        <property name="user"
                  view="_minimal"/>
    </view>
    <view class="com.company.office.entity.Request"
          extends="_local"
          name="request-view">
        <property name="applicant"
                  view="_minimal"/>
        <property name="step"
                  view="_minimal">
            <property name="position"/>
            <property name="description"/>
        </property>
        <property name="worker"
                  view="_minimal"/>
        <property name="acts"
                  view="requestAction-view"/>
        <property name="states"
                  view="requestStatus-view"/>
        <property name="communications"
                  view="requestCommunication-view"/>
    </view>
</views>
